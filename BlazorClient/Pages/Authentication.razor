@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action">
    <CompletingLoggingIn>CompletingLoggingIn</CompletingLoggingIn>
    <CompletingLogOut>CompletingLogOut</CompletingLogOut>
    <LoggingIn>Авторизация...</LoggingIn>
    <LogInFailed>LogInFailed</LogInFailed>
    <LogOut>LogOut</LogOut>
    <LogOutFailed>LogOutFailed</LogOutFailed>
    <LogOutSucceeded>Вы вышили из системы.</LogOutSucceeded>
    <Registering>Registering</Registering>
    <UserProfile>UserProfile</UserProfile>
</RemoteAuthenticatorView>


@code{
    [Parameter] public string Action { get; set; }
}
